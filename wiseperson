//wisePerson 
function wisePerson(wiseType, whatToSay) {
  return 'A wise ' + wiseType + ' once said: "' + whatToSay + '".';
  
//shouter
function shouter(whatToShout) {
  return `${whatToShout.toUpperCase()}!!!`;

//text normalizer
function textNormalizer(text) {
  return text.toLowerCase().trim();
